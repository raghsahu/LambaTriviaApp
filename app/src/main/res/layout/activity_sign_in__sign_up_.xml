<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F7FD"
    android:orientation="vertical"
    android:scrollbars="none"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:background="@drawable/signin2"
                        android:orientation="vertical" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:contentPadding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textview16blue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="LOGIN"
                            android:textColor="@color/dark_blue" />


                        <!--<EditText-->
                        <!--android:id="@+id/et_name"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/_10sdp"-->
                        <!--android:background="@drawable/shape_edittext"-->
                        <!--android:drawableLeft="@drawable/ic_user"-->
                        <!--android:drawablePadding="@dimen/_10sdp"-->
                        <!--android:hint="Name"-->
                        <!--android:inputType="text"-->
                        <!--android:padding="@dimen/_10sdp" />-->

                        <!--<EditText-->
                        <!--android:id="@+id/et_mobile"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/_10sdp"-->
                        <!--android:background="@drawable/shape_edittext"-->
                        <!--android:drawableLeft="@drawable/ic_mobile"-->
                        <!--android:drawablePadding="@dimen/_10sdp"-->
                        <!--android:hint="Mobile"-->
                        <!--android:inputType="phone"-->
                        <!--android:padding="@dimen/_10sdp" />-->


                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_edittext"
                            android:drawableLeft="@drawable/user_name"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="User name"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_10sdp" />


                        <EditText
                            android:id="@+id/et_userPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_edittext"
                            android:drawableLeft="@drawable/ic_lock"
                            android:drawablePadding="@dimen/_10sdp"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:padding="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_forgot_pw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:gravity="end"
                            android:text="Forgot Password" />

                        <!--<EditText-->
                        <!--android:id="@+id/et_confirm_pass"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/_10sdp"-->
                        <!--android:layout_marginBottom="@dimen/_80sdp"-->
                        <!--android:background="@drawable/shape_edittext"-->
                        <!--android:drawableLeft="@drawable/ic_lock"-->
                        <!--android:drawablePadding="@dimen/_10sdp"-->
                        <!--android:hint="Confirm Password"-->
                        <!--android:inputType="textPassword"-->
                        <!--android:padding="@dimen/_10sdp" />-->


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--<LinearLayout-->
                <!--android:id="@+id/li_welcom"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                <!--android:layout_marginTop="@dimen/_60sdp"-->
                <!--android:orientation="horizontal">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Welcome to "-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="@dimen/_16sdp" />-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Neibar,"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="@dimen/_18sdp"-->
                <!--android:textStyle="bold" />-->
                <!--</LinearLayout>-->

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/li_welcom"-->
                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                <!--android:orientation="horizontal">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Signup to Continue"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="@dimen/_14sdp" />-->
                <!--</LinearLayout>-->


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_shape"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_next" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel_first"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_80sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview12blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Don't Have An Account ?" />

                <TextView
                    android:id="@+id/tv_signup"
                    style="@style/textview14blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Sign Up" />

            </LinearLayout>

            <LinearLayout
            android:layout_margin="15dp"
            android:weightSum="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.gms.common.SignInButton
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/g_sign_in_button"
            >

            </com.google.android.gms.common.SignInButton>


            <com.facebook.login.widget.LoginButton
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:id="@+id/fb_login_button"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            />

            </LinearLayout>









        </LinearLayout>
    </RelativeLayout>

</ScrollView>




















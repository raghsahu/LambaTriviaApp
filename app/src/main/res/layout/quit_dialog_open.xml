<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimarybg"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/color_card_play"
        android:elevation="2dp">

        <LinearLayout
            android:background="@color/color_card_play"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to quit?"
                android:textColor="@color/colorwhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btn_quit_yes"
                android:background="@drawable/btn_yellow_bg"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Yes"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:elevation="2dp"
                android:textColor="@color/colorwhite"
                />

                <Button
                    android:id="@+id/btn_quit_no"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_yellow_bg"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:elevation="2dp"
                    android:textColor="@color/colorwhite"
                    />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimarybg"
    tools:context=".Activity.League_Play_Activity.League_seemore_complete">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_post"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimarybg"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/coin_new"
                    />

                <TextView
                    android:id="@+id/tv_wallet_coin"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardBackgroundColor="#800C0C0C"
                android:layout_gravity="center"
                android:elevation="2dp">

                <!--android:background="@drawable/play_img1"-->
                <LinearLayout
                    android:id="@+id/ll_bg_image"

                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#650C0C0C"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@color/colorAccent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                                <!--android:layout_gravity="center"-->
                                <!--android:layout_width="20dp"-->
                                <!--android:layout_height="20dp"-->
                                <!--android:src="@drawable/coin_new"-->
                                <!--/>-->


                                <TextView

                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¦"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorwhite"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/tv_total_naira"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorwhite"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/tv_team_vs"
                            android:layout_weight="0.9"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/colorwhite"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manchester vs Aus"
                            android:textSize="25dp"
                            android:textStyle="bold"

                            />

                        <LinearLayout
                            android:weightSum="1"
                            android:gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!--<androidx.cardview.widget.CardView-->
                                <!--android:layout_gravity="bottom"-->
                                <!--app:cardBackgroundColor=""-->
                                <!--android:gravity="center"-->
                                <!--android:elevation="5dp"-->
                                <!--android:layout_marginLeft="15dp"-->
                                <!--android:layout_marginBottom="10dp"-->
                                <!--app:cardCornerRadius="10dp"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content">-->

                                <LinearLayout
                                    android:background="@drawable/time_left_img"
                                    android:layout_width="150dp"
                                    android:layout_height="40dp">

                                    <TextView
                                        android:layout_marginRight="15dp"
                                        android:id="@+id/tv_time_left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="end"
                                        android:text=" "
                                        android:textColor="@color/colorwhite"
                                        android:textAllCaps="false"
                                        android:textSize="14dp"
                                        android:textAlignment="textEnd"
                                        android:textStyle="bold"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>
                                <!--</androidx.cardview.widget.CardView>-->
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_game_discrp"
                android:layout_margin="20dp"
                android:textColor="@color/colorwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester vs Aus -44th match cricket league. When 8.30pm"
                android:textSize="18dp"
                android:textStyle="normal"

                />


     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

     <LinearLayout
         android:id="@+id/ll_answer_details"
         android:gravity="center"
         android:weightSum="1"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:padding="10dp"
             android:layout_weight="0.3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="CrowdScore"
             android:textSize="16dp"
             android:textColor="@color/colorwhite"
             />

         <ImageView
             android:id="@+id/iv_up_cro"
             android:padding="10dp"
           android:layout_gravity="right"
             android:layout_weight="0.7"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:srcCompat="@drawable/arrow_down" />

     </LinearLayout>

         <LinearLayout
             android:visibility="gone"
             android:id="@+id/ll_crowd_details"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <!--<TextView-->
                 <!--android:padding="10dp"-->
                 <!--android:layout_width="match_parent"-->
                 <!--android:layout_height="wrap_content"-->
                 <!--android:text="asfffffffffffffffffffffff"-->
                 <!--android:textSize="13dp"-->
                 <!--android:textColor="@color/colorwhite"-->
                 <!--/>-->

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/recycler_crowd"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

             </androidx.recyclerview.widget.RecyclerView>

         </LinearLayout>


     </LinearLayout>

     <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_rules_click"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rules"
                    android:textSize="16dp"
                    android:textColor="@color/colorwhite"
                    />

                <ImageView
                    android:id="@+id/iv_up_rule"
                    android:padding="10dp"
                    android:layout_gravity="right"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow_down" />

            </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_rules"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_league_rules"
                android:layout_margin="10dp"
                android:textColor="@color/colorwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18dp"
                android:textStyle="normal"

                />

        </LinearLayout>
        </LinearLayout>

     <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_reward_click"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="0.3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rewards"
                        android:textSize="16dp"
                        android:textColor="@color/colorwhite"
                        />

                    <ImageView
                        android:id="@+id/iv_up_rew"
                        android:padding="10dp"
                        android:layout_gravity="right"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/arrow_down" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_reward_details"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<TextView-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="asfffffffffffffffffffffff"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/colorwhite"-->
                    <!--/>-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>


            </LinearLayout>









        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




    </LinearLayout>
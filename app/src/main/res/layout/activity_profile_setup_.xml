<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimarybg"
    tools:context=".Activity.ProfileAll_Activity.Profile_setup_Activity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimarybg"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow" />

        </RelativeLayout>

    <LinearLayout
        android:weightSum="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:shape="ring"
                app:cardCornerRadius="45dp"

                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/person"
                    />

            </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user_name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_main_profile"
            android:layout_marginBottom="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/right_arrow"
            />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_coin_wallet"
        android:weightSum="1"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@drawable/dotted_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="0.5"
        android:weightSum="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coin_new"
                />

            <TextView
                android:id="@+id/tv_coin"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:textStyle="normal"
                />

        </LinearLayout>

    </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/colorgray" />



    <LinearLayout
        android:layout_weight="0.5"
        android:layout_margin="5dp"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />


        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:layout_gravity="center"
            android:textColor="#06D803"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_naira"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/coin_new"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total coins earned"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:textStyle="normal"
                />

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/coin_new"
                    />

                <TextView
                    android:id="@+id/tv_total_earn_coin"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgray"

            />
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/Rs"
                android:textColor="#06D803"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total cash won"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:textStyle="normal"
                />


            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:layout_gravity="center"
                    android:textColor="#06D803"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/tv_taotal_earn_naira"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textColor="@color/colorwhite"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorgray"

            />


    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/frnds"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/tv_total_frnds"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"

        />

    <LinearLayout
        android:id="@+id/ll_share_frnds"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/gift"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_marginLeft="@dimen/_3sdp"
            android:id="@+id/tv_share"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Friends &amp; earn "
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coin_new"
                />

            <TextView
                android:id="@+id/tv_invite_coin"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:textStyle="normal"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"

        />

    <LinearLayout
        android:id="@+id/ll_how_to_play"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/how_play"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to play"
            android:textColor="@color/colorwhite"
            android:textSize="15dp"
            android:textStyle="normal"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"

        />

</LinearLayout>




</LinearLayout>
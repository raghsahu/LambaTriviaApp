<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimarybg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time"
            android:textSize="14dp"
            android:textColor="@color/colorgrey"
            android:text="01:34 pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/win_coin_img"
            />
        <ImageView
            android:id="@+id/iv_plus_minus"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/add_icon"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/iv_coin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/coin_new"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_naira_sign"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/Rs"
            android:textColor="@color/color_naira_sign"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:id="@+id/tv_details"
            android:textSize="14dp"
            android:textColor="@color/colorwhite"
            android:text="300 Used in Lamba league"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>